# Bench version to install: 13, 14, or 15
BENCH_VERSION=15

# Auto-confirm installation? (yes/no)
AUTO_CONFIRM_INSTALL=yes

# SQL root password for MariaDB
SQL_ROOT_PASSWORD=changeme!

# Site name (FQDN recommended for SSL)
SITE_NAME=erp.example.com

# ERPNext Administrator password
ADMIN_PASSWORD=your_admin_password

# Install ERPNext app? (yes/no)
ERPNEXT_INSTALL=yes

# Mark for production install instead of development? (yes/no)
PRODUCTION_INSTALL=yes

# Install HRMS app? (yes/no)
HRMS_INSTALL=no

# Install SSL? (yes/no)
INSTALL_SSL=yes

# Email address for SSL certificate registration
EMAIL_ADDRESS=admin@example.com 